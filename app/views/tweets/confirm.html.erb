<div class="mainContainer">
  <div class="pageTitle confirmTweet">投稿内容確認</div>
  <h3 class="confirm_sentence">以下の内容で送信しますか？</h3>

  <%= form_with(model: @tweet, url: tweets_path, local: true) do |form| %>
    <%= form.hidden_field :content %>
    <div class="container confirmTweet">
      <div class="tweetShow-content"><%= @tweet.content %></div>
    </div>
    <div class="page-link toTweetRegist">
      <%= form.submit  "投稿", class: 'btn btn-warning' %>
    </div>
  <% end %>

  <div class="page-link toNewTweet">
  <%= form_with(model: @tweet, url: new_tweet_path, local: true, method: 'get') do |form| %>
    <%= form.hidden_field :content %>
    <%= form.submit "戻る", name: 'back', class: 'btn btn-default' %>
  <% end %>
  </div>
</div>
